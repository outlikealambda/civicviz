extends layout

block body
  div(ng-controller='VizParamsCtrl')
    div.viz-params.panel.panel-default
      div.panel-heading Select a Race
      ul.list-unstyled.form-horizontal.viz-select-list
        li.form-group
          label.col-sm-4.control-label Office 
          div.col-sm-8
            select.form-control(ng-model='title', ng-options='possibleTitle for possibleTitle in titles')
        li.form-group
          label.col-sm-4.control-label County 
          div.col-sm-8
            select.form-control(ng-model='county', ng-options='possibleCounty for possibleCounty in counties')
        li.form-group
          label.col-sm-4.control-label District
          div.col-sm-8
            select.form-control(ng-model='district', ng-options='possibleDistrict for possibleDistrict in districts')
        li.form-group
          label.col-sm-4.control-label Candidacy
          div.col-sm-8
            select.form-control(ng-model='period', ng-options='possiblePeriod for possiblePeriod in periods')
        li.form-group
          button.viz-button.btn.btn-default(type="button", ng-click='setParams(title, county, district, period)') Get Data
          button.btn.btn-default(type="button", ng-click='testAdd()') +Ring
    div(donut-builder, on-submit='setParams')

  script(src='components/d3/d3.js')
  script(src='components/angular/angular.js')
  script(src='components/angular-route/angular-route.js')
  script(src='components/angular-socket-io/socket.js')
  script(src='http://localhost:3000/socket.io/socket.io.js')
  script(src='js/wm.d3.js')
  script(src='js/wm.donut.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  link(rel="stylesheet" href='components/bootstrap/dist/css/bootstrap.css')
